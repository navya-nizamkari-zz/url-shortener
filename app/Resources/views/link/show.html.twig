{% extends 'base.html.twig' %}

{% block body %}
    <h1>Link</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ link.id }}</td>
            </tr>
            <tr>
                <th>Long_url</th>
                <td>{{ link.longurl }}</td>
            </tr>
            <tr>
                <th>Short_url</th>
                <td>{{ link.shorturl }}</td>
            </tr>
            <tr>
                <th>Token</th>
                <td>{{ link.token }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('link_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('link_edit', { 'id': link.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
